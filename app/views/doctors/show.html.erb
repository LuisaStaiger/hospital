<div class="card-product">
  <img src="data:image/jpeg;base64," />
  <div class="card-product-infos">
    <h2><%= "#{@doctor.title} #{@doctor.first_name} #{@doctor.last_name.capitalize}" %></h2>
    <p><strong><%= @doctor.speciality %></strong></p>
    <p><% if @doctor.available == true %>
      Doctor is available
      <% else %>
      Doctor not available
      <% end %></p>
    <p><%="Experience of #{@doctor.experience} years" %></p>
  </div>
</div>

<div class="card-education">
  <img src="https://images.rawpixel.com/image_1100/czNmcy1wcml2YXRlL3Jhd3BpeGVsX2ltYWdlcy93ZWJzaXRlX2NvbnRlbnQvbHIvcm0zNzNiYXRjaDEzLTA4MS1rcHhrOWs1Zi5qcGc.jpg" alt="Education Image">

  <% @doctor.educations.each do |education| %>
    <div class="card-education-infos">
      <div class="education-details">
        <h2><%= education.degree_name %></h2>
        <p><%= "#{education.university} University" %></p>
        <p><%= "University Score: #{education.score}" %></p>
      </div>
      <div class="education-details">
        <h2><%= link_to "Edit", edit_doctor_education_path(@doctor), class: "btn btn-ghost" %></h2>
      </div>
    </div>
  <% end %>
</div>

<div class="card-education">
  <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS2t7hzQEEMzy_X7kiSQUCP2RJoemntJ4E1L92hGfeSzOT5w009TpDYrWCZzttg2vwPPos&usqp=CAU">

  <div class="card-education-infos">
    <div class="education-details">
      <h2><%= "Next Appointments"%></h2>
      <% @doctor.appointments.each do |appointment| %>
        <p><%= appointment.date %></p>
        <p><%= "with #{appointment.patient.last_name} with #{appointment.patient.insurance} insurance" %></p>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-education">
   <div class="card-education-infos">
      <h2><%= link_to "back to index", doctors_path, class: "btn btn-ghost" %></h2>
      <h2><%= link_to "edit doctor", edit_doctor_path, class: "btn btn-ghost" %></h2>
      <h2><%= link_to "Delete", doctor_path,  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-ghost"%></h2>
      <h2><%= link_to "add an education", new_doctor_education_path(@doctor, @eduction), class: "btn btn-ghost" %></h2>
      <h2><%= link_to "add an appointment", new_appointment_path(@doctor, @patient), class: "btn btn-ghost" %></h2>
    </div>
  </div>
